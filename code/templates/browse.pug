script#movie-template(type='text/html').
  <div class="col-md-4 movie">
    <div class="thumbnail">
      <span class="label label-success rating"><%= rating %>
        <i class="glyphicon glyphicon-star"></i>
      </span>
      <div class="caption">
        <h4><%= _fid %>. <%= name %></h4>
        <div class="outline">
          <%= outline %>
          <span class="runtime">
            <i class="glyphicon glyphicon-time"></i>
            <%= runtime %> mins.
          </span>
        </div>
        <div class="detail">
          <dl>
            <dt>Director</dt>
            <dd><%= director %></dd>
            <dt>Actors</dt>
            <dd><%= stars %></dt>
            <dt>Year</dt>
            <dd><%= year %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
script#genre_template(type='text/html').
